const int pirPin = 14;
const int buzzerPin = 27;

void setup() {
  pinMode(pirPin, INPUT);
  pinMode(buzzerPin, OUTPUT);
  Serial.begin(115200);
}
void loop() {
  int motion = digitalRead(pirPin);
  if (motion) {
    Serial.println("Motion Detected!");
    tone(buzzerPin, 1000);
    delay(500);
    noTone(buzzerPin);
  }
  delay(100);
}

